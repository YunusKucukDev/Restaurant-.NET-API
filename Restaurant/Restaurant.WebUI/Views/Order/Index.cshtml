@using Restaurant.DtoLayer.OrderDtos

@model List<ResultOrderDto>

@{
    ViewData["Title"] = "Siparişlerim";
    Layout = "~/Views/UI/Index.cshtml";
    int count = 0 ; 
}

<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-history text-secondary"></i> Geçmiş Siparişlerim</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info py-5 text-center">
            <i class="fas fa-shopping-basket fa-3x mb-3"></i>
            <h4>Henüz bir siparişiniz bulunmuyor.</h4>
            <a href="/Menu/Index" class="btn btn-primary mt-3">Menüye Göz At</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover bg-white align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Sipariş No</th>
                        <th>Tarih</th>
                        <th>Tutar</th>
                        <th class="text-center">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++; 
                        <tr>
                            <td><strong>#@count</strong></td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td class="text-primary fw-bold">@item.TotalPrice ₺</td>
                            <td class="text-center">
                                <a href="/Order/Details/@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-eye"></i> Detaylar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>