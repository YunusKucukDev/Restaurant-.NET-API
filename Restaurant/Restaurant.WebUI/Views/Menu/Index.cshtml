@using Restaurant.DtoLayer.CatalogDtos.MenuDtos.CategoryDtos
@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UI/Index.cshtml";
}

<div class="best_burgers_area">
    <div class="container">
        @foreach (var category in Model)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="section_title text-center mb-3">
                        <h3><span>@category.CategoryName</span></h3>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var product in category.Products)
                {
                    <div class="col-xl-6 col-lg-6 col-md-6 mb-4">
                        <div class="single_delicious d-flex align-items-center">
                            <div class="thumb">
                                <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid" />
                            </div>
                            <div class="info ms-3">
                                <h3>@product.Name</h3>
                                <p>@product.Description</p>
                                <span>@product.Price.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
