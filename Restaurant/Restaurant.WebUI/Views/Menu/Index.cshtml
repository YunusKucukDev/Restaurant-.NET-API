@using Restaurant.DtoLayer.CatalogDtos.MenuDtos.CategoryDtos
@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UI/Index.cshtml";
}

<div class="best_burgers_area">
    <div class="container">

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center">
                Gösterilecek kategori veya ürün bulunamadı.
            </div>
        }
        else
        {
            @foreach (var category in Model)
            {
                <!-- KATEGORİ BAŞLIĞI -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="section_title text-center mb-3">
                            <h3>
                                <span>@category.CategoryName</span>
                            </h3>
                        </div>
                    </div>
                </div>

                <!-- ÜRÜNLER -->
                <div class="row">
                    @foreach (var product in category.Products)
                    {
                        <div class="col-xl-6 col-lg-6 col-md-6 mb-4">
                            <div class="single_delicious d-flex align-items-center p-3">

                                <!-- ÜRÜN GÖRSELİ -->
                                <div class="">
                                    <img src="@product.ImageUrl"
                                         alt="@product.Name"
                                         class="img-fluid"
                                         style="width:120px;height:120px;object-fit:cover;" />
                                </div>

                                <!-- ÜRÜN BİLGİLERİ -->
                                <div class="info ms-3 w-100">
                                    <h3>@product.Name</h3>
                                    <p>@product.Description</p>

                                    <!-- FİYAT + SEPETE EKLE -->
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold fs-5">
                                            @product.Price.ToString("C")
                                        </span>

                                        <a asp-controller="Basket"
                                           asp-action="AddBasketItem"
                                           asp-route-id="@product.ProductId"
                                           class="btn btn-sm btn-warning">
                                            🛒 Sepete Ekle
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            }
        }

    </div>
</div>
