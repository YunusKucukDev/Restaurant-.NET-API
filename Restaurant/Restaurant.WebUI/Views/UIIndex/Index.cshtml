<!doctype html>
<html class="no-js" lang="zxx">

<style>
    /* Slider Ayarları */
    .slider_text.content_box {
        opacity: 1 !important;
        transform: none !important;
    }

    .owl-carousel .owl-item.fade-out {
        opacity: 0 !important;
        transition: opacity 2500ms ease-in-out !important;
    }

    .owl-carousel .owl-item.fade-in {
        opacity: 1 !important;
        transition: opacity 2500ms ease-in-out !important;
    }

    /* SOSYAL MEDYA VE SEPET SÜTUNU */
    .floating-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        display: flex;
        flex-direction: column; /* Alt alta sıralar */
        gap: 12px; /* Aralarındaki boşluk */
        z-index: 9999;
    }

    .floating-btn {
        width: 50px;
        height: 50px;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        transition: transform 0.3s ease, background-color 0.3s ease;
        position: relative;
    }

        .floating-btn:hover {
            transform: scale(1.1);
            color: #fff;
        }

    /* Özel Renkler */
    .btn-basket {
        background-color: #ff6b00;
        height: 60px;
        width: 60px;
        font-size: 26px;
    }
    /* Sepet biraz daha büyük */
    .btn-whatsapp {
        background-color: #25D366;
    }

    .btn-instagram {
        background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%);
    }

    .btn-facebook {
        background-color: #1877F2;
    }

    .btn-telegram {
        background-color: #0088cc;
    }

    .cart-count {
        position: absolute;
        top: -5px;
        right: -5px;
        background: red;
        color: white;
        font-size: 12px;
        width: 22px;
        height: 22px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Sayfanın taşan kısımlarını gizlemek için body'ye ekle */


    /* Sayfanın başlangıç durumu: Sağda ve şeffaf */
    .page-slide-transition {
        opacity: 0;
        transform: translateX(100px); /* 100px sağdan başlar */
        transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1), opacity 0.6s ease-in-out;
    }

    /* Sayfa yüklendiğinde gelecek olan sınıf: Merkezde ve görünür */
    .page-slide-active {
        opacity: 1;
        transform: translateX(0);
    }

    /* Çıkış efekti: Sola doğru kayarak kaybolma */
    .page-slide-out {
        opacity: 0;
        transform: translateX(-100px);
    }
</style>

@await Component.InvokeAsync("_HeadUILayoutComponentPartial")

<body>

        @await Component.InvokeAsync("_NavbarUILayoutComponentPartial")

        <div class="slider_area">
            <div class="slider_active owl-carousel">
                <div class="single_slider d-flex align-items-center slider_bg_1 overlay">
                    <div class="container">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-xl-9">
                                <div class="slider_text text-center content_box">
                                    <div class="deal_text"><span>Since 1972</span></div>
                                    <h3>Çorbacı</h3>
                                    <h4>Fethi Baba</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="single_slider d-flex align-items-center slider_bg_2 overlay">
                    <div class="container">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-xl-9">
                                <div class="slider_text text-center content_box">
                                    <div class="deal_text"><span>Since 1972</span></div>
                                    <h3>Pide & Kebap</h3>
                                    <h4>Fethi Baba</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
