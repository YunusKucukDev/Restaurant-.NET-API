@{
    ViewData["Title"] = "Sipariş Başarılı";
    Layout = "~/Views/UI/Index.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 100px;"></i>
            </div>

            <h1 class="display-4 fw-bold text-dark">Siparişiniz Alındı!</h1>
            <p class="lead text-muted">
                Bizi tercih ettiğiniz için teşekkür ederiz. Siparişiniz hazırlanmaya başlandı.
            </p>

            <div class="card border-0 shadow-sm bg-light p-4 mt-4">
                <div class="row text-start">
                    <div class="col-sm-6">
                        <h6 class="text-uppercase text-muted mb-2">Sipariş Numarası</h6>
                        <p class="fw-bold">#@ViewBag.OrderId</p>
                    </div>
                    <div class="col-sm-6">
                        <h6 class="text-uppercase text-muted mb-2">Ödeme Yöntemi</h6>
                        <p class="fw-bold">Kapıda Ödeme (Nakit/Kart)</p>
                    </div>
                </div>
                <hr />
                <p class="mb-0 text-center text-secondary">
                    <i class="fas fa-truck me-2"></i>Kuryemiz yola çıkmadan önce sizinle iletişime geçecektir.
                </p>
            </div>

            <div class="mt-5">
                <a href="/Home/Index" class="btn btn-primary btn-lg px-5 me-3">
                    <i class="fas fa-home me-2"></i>Ana Sayfa
                </a>
                <a href="/User/MyOrders" class="btn btn-outline-secondary btn-lg px-5">
                    <i class="fas fa-shopping-bag me-2"></i>Siparişlerimi Gör
                </a>
            </div>
        </div>
    </div>
</div>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
