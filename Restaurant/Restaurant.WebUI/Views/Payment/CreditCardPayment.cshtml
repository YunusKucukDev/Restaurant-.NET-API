@{
    ViewData["Title"] = "Kredi Kartı Ödemesi";
    Layout = "~/Views/UI/Index.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="fas fa-lock me-2"></i>Güvenli Ödeme Ekranı</h4>
                </div>
                <div class="card-body p-4">

                    <div class="credit-card-vibe mb-4 p-3 rounded text-white shadow"
                         style="background: linear-gradient(45deg, #1a1a1a, #4e4e4e); min-height: 180px; position: relative;">
                        <div class="d-flex justify-content-between align-items-center">
                            <i class="fas fa-sim-card fa-2x"></i>
                            <i class="fab fa-cc-visa fa-2x"></i>
                        </div>
                        <div class="mt-4">
                            <h5 id="card-no-display" class="tracking-widest">**** **** **** ****</h5>
                        </div>
                        <div class="mt-4 d-flex justify-content-between">
                            <div>
                                <small class="d-block opacity-50">KART SAHİBİ</small>
                                <span id="card-name-display">AD SOYAD</span>
                            </div>
                            <div>
                                <small class="d-block opacity-50">SKT</small>
                                <span id="card-date-display">MM/YY</span>
                            </div>
                        </div>
                    </div>

                    <form asp-controller="Payment" asp-action="Success" method="post">
                        <input type="hidden" name="OrderId" value="@ViewBag.OrderId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kart Üzerindeki İsim</label>
                            <input type="text" name="CardHolderName" class="form-control" id="card-name-input" placeholder="Ad Soyad" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kart Numarası</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                <input type="text" name="CardNumber" class="form-control" id="card-no-input" placeholder="0000 0000 0000 0000" maxlength="19" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Son Kullanma Tarihi</label>
                                <input type="text" name="ExpiryDate" class="form-control" id="card-date-input" placeholder="AA/YY" maxlength="5" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">CVV</label>
                                <input type="password" name="CVV" class="form-control" placeholder="***" maxlength="3" required />
                            </div>
                        </div>

                        <hr />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check-circle me-2"></i> Ödemeyi Onayla
                            </button>
                            <a href="/Payment/Index?orderId=@ViewBag.OrderId" class="btn btn-link text-decoration-none text-muted">Vazgeç ve Yöntemi Değiştir</a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center mt-3">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5e/Visa_Inc._logo.svg/2560px-Visa_Inc._logo.svg.png" width="40" class="me-2 opacity-50">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2a/Mastercard-logo.svg/1280px-Mastercard-logo.svg.png" width="40" class="opacity-50">
            </div>
        </div>
    </div>
</div>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script>
        // Kart görselini anlık güncelleme (Live Preview)
        const nameInput = document.getElementById('card-name-input');
        const noInput = document.getElementById('card-no-input');
        const dateInput = document.getElementById('card-date-input');

        nameInput.addEventListener('input', (e) => {
            document.getElementById('card-name-display').innerText = e.target.value.toUpperCase() || "AD SOYAD";
        });

        noInput.addEventListener('input', (e) => {
            document.getElementById('card-no-display').innerText = e.target.value || "**** **** **** ****";
        });

        dateInput.addEventListener('input', (e) => {
            document.getElementById('card-date-display').innerText = e.target.value || "MM/YY";
        });
    </script>
