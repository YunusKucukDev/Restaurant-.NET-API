@using Restaurant.DtoLayer.CatalogDtos.InformationDtos.Aboutservice
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UI/Index.cshtml";
}

@foreach (var item in Model)
{
     <div class="about_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-lg-6 col-md-6">
                    <div class="about_thumb2">
                        <div class="img_1">
                            <img src="@item.BranchImage1" alt="">
                        </div>
                        <div class="img_2">
                            <img src="@item.BranchImage2" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-lg-5 offset-lg-1 col-md-6">
                    <div class="about_info">
                        <div class="section_title mb-20px">
                            <h3>
                                @item.Title <br>
                            </h3>
                        </div>
                        <p>@item.Description</p>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="gallery_area">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section_title mb-70 text-center">
                        <h3><span>Galerimiz</span></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="single_gallery big_img">
            <a class="popup-image" src="@item.GalleryImage1">
                <i class="ti-plus"></i>
            </a>
            <img src="@item.GalleryImage1" alt="">
        </div>
        <div class="single_gallery small_img">
            <a class="popup-image" href="@item.GalleryImage2">
                <i class="ti-plus"></i>
            </a>
            <img src="@item.GalleryImage2" alt="">
        </div>
        <div class="single_gallery small_img">
            <a class="popup-image" href="@item.GalleryImage3">
                <i class="ti-plus"></i>
            </a>
            <img src="@item.GalleryImage3" alt="">
        </div>

        <div class="single_gallery small_img">
            <a class="popup-image" href="@item.GalleryImage4">
                <i class="ti-plus"></i>
            </a>
            <img src="@item.GalleryImage4" alt="">
        </div>
        <div class="single_gallery small_img">
            <a class="popup-image" href="@item.GalleryImage5">
                <i class="ti-plus"></i>
            </a>
            <img src="@item.GalleryImage5" alt="">
        </div>
        <div class="single_gallery big_img">
            <a class="popup-image" href="@item.GalleryImage6">
                <i class="ti-plus"></i>
            </a>
            <img src="@item.GalleryImage6" alt="">
        </div>
    </div>
}

   

  
  


   

