@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo hücrelerini dikeyde ortala */
    .table td {
        vertical-align: middle;
    }

    /* Açıklama metni için özel kısıtlama */
    .text-truncate-custom {
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Mobilde butonların yan yana düzgün durması */
    .btn-responsive-group {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    /* Modern rozetler için hafif arka plan renkleri */
    .badge-soft-success {
        background-color: #e8f5e9;
        color: #2e7d32;
        border: 1px solid #c8e6c9;
    }

    .badge-soft-danger {
        background-color: #ffebee;
        color: #c62828;
        border: 1px solid #ffcdd2;
    }

    .badge-soft-dark {
        background-color: #f5f5f5;
        color: #424242;
        border: 1px solid #e0e0e0;
    }

    @@media (max-width: 768px) {
        .text-truncate-custom {
            max-width: 90px;
        }

        .table {
            font-size: 12px;
        }

        .btn-responsive-group .btn {
            padding: 4px 8px;
        }
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center border-bottom bg-white">
                <h5 class="card-title m-b-0 text-dark font-weight-bold">
                    <i class="fa fa-list-ul text-primary mr-2"></i>Kategori İşlemleri
                </h5>
                <span class="badge rounded-pill badge-soft-dark p-2 px-3">
                    <i class="fa fa-database"></i> @Model.Count Toplam
                </span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center mb-0">
                    <thead class="bg-light text-uppercase small font-weight-bold">
                        <tr>
                            <th scope="col" style="width: 50px;">#</th>
                            <th scope="col">Kategori İsmi</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Sıralama</th>
                            <th scope="col">Durum</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row" class="text-muted">@count</th>
                                <td class="font-weight-bold text-dark">@item.Name</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <div class="text-truncate-custom mx-auto text-muted" title="@item.Description">
                                            @item.Description
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge badge-soft-danger small">
                                            <i class="fa fa-minus"></i> Yok
                                        </span>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-soft-dark">@item.DisplayOrder</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="text-success small font-weight-bold">
                                            <i class="fa fa-check-circle"></i> Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger small font-weight-bold">
                                            <i class="fa fa-times-circle"></i> Pasif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-responsive-group">
                                        <a class="btn btn-outline-primary btn-sm" href="~/Admin/Category/UpdateCategory/@item.CategoryId" title="Düzenle">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" href="~/Admin/Category/DeleteCategory/@item.CategoryId" title="Sil" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 mb-4">
            <a class="btn btn-success btn-lg w-100 shadow-sm border-0"
               href="~/Admin/Category/CreateCategory"
               style="border-radius: 10px; background: linear-gradient(45deg, #28a745, #1e7e34);">
                <i class="fa fa-plus-circle"></i> Yeni Kategori Ekle
            </a>
        </div>
    </div>
</div>