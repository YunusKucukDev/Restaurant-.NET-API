@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Kategori İşlemleri</h5>
            </div>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kategori İsmi</th>
                        <th scope="col">Açıklama </th>
                        <th scope="col">Sıralama önceliği</th>
                        <th scope="col">Aktif mi</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.DisplayOrder</td>
                            <td>@item.IsActive</td>
                            <td>
                                <div class="button-group-area">
                                    <a class="btn btn-primary " href="~/Admin/Category/UpdateCategory/@item.CategoryId">Güncelle</a>
                                    <a class="btn btn-danger " href="~/Admin/Category/DeleteCategory/@item.CategoryId">Sil</a>
                                   
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a class="btn btn-success btn-lg btn-rounded d-flex justify-content-center" href="~/Admin/Category/CreateCategory"><i class="fa fa-plus"> Kategori Ekle</i></a>
        </div>
    </div>
</div>

