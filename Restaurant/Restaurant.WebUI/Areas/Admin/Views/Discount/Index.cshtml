@using Restaurant.DtoLayer.DiscountCoupondtos
@model List<ResultDiscountCouponDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Kupon İşlemleri</h5>
            </div>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kod İsmi</th>
                        <th scope="col">Oran</th>
                        <th scope="col">Aktif mi</th>
                        <th scope="col">Başlangıç Saati</th>
                        <th scope="col">Bitiş Saati</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Code</td>
                            <td>@item.Rate</td>
                            <td>@item.IsActive</td>
                            <td>@item.StartDate</td>
                            <td>@item.EndDate</td>
                            <td>
                                <div class="button-group-area">
                                    <a class="btn btn-primary " href="~/Admin/Discount/UpdateDiscountCoupon/@item.DiscountId">Güncelle</a>
                                    <a class="btn btn-danger " href="~/Admin/Discount/DeleteDiscountCoupon/@item.DiscountId">Sil</a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a class="btn btn-success btn-lg btn-rounded d-flex justify-content-center" href="~/Admin/Discount/CreateDiscountCoupon"><i class="fa fa-plus"> Kategori Ekle</i></a>
        </div>
    </div>
</div>

