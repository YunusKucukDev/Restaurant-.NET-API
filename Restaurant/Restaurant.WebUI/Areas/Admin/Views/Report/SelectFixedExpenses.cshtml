
@model FixedExpensesDetailViewModel

@{
    ViewData["Title"] = "Rapor Detay";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
}



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">
            <i class="bi bi-calendar3 me-2"></i>
            @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString() Arası Detaylar
        </h3>
        <a href="/Report/Index" class="btn btn-outline-secondary rounded-pill">Geri Dön</a>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-success text-white rounded-top-4 p-3">
                    <h5 class="mb-0"><i class="bi bi-arrow-down-left-circle me-2"></i>Gelir Hareketleri</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Açıklama</th>
                                <th class="text-end">Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var income in Model.Incomes)
                            {
                                <tr>
                                    <td>@income.Date.ToShortDateString()</td>
                                    <td>@income.IncomeName</td>
                                    <td class="text-end text-success fw-bold">@income.IncomeAmount.ToString("N2") ₺</td>
                                </tr>
                            }
                            @if (!Model.Incomes.Any())
                            {
                                <tr><td colspan="3" class="text-center text-muted">Gelir kaydı yok.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-danger text-white rounded-top-4 p-3">
                    <h5 class="mb-0"><i class="bi bi-arrow-up-right-circle me-2"></i>Gider Hareketleri</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Açıklama</th>
                                <th class="text-end">Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var outcome in Model.Outcomes)
                            {
                                <tr>
                                    <td>@outcome.Date.ToShortDateString()</td>
                                    <td>@outcome.OutcomeName</td>
                                    <td class="text-end text-danger fw-bold">@outcome.OutcomeAmount.ToString("N2") ₺</td>
                                </tr>
                            }
                            @if (!Model.Outcomes.Any())
                            {
                                <tr><td colspan="3" class="text-center text-muted">Gider kaydı yok.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>