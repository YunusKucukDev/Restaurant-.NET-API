@model PeriodicalAnalysisViewModel

@{
    ViewData["Title"] = "Dönemsel Analiz";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
}

<input type="hidden" id="rawNetKasa" value="@((Model.PeriodTotalIncome - Model.PeriodTotalOutcome).ToString("F2", System.Globalization.CultureInfo.InvariantCulture))" />

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4 bg-dark text-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h4><i class="bi bi-calculator me-2"></i>Dönemsel Maliyet Analizi</h4>
                <p class="small mb-0">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString() arası kasa verileri baz alınmıştır.</p>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-success p-2">Gelir: @Model.PeriodTotalIncome.ToString("C2")</span>
                <span class="badge bg-danger p-2">Gider: @Model.PeriodTotalOutcome.ToString("C2")</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="card border-dashed border-primary" style="min-height: 450px; border: 2px dashed #0d6efd; background: #f8f9fa;">
                <div class="card-header bg-primary text-white fw-bold">Hesaplamaya Dahil Et</div>
                <div id="targetBox" class="card-body drop-zone" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <div class="text-center text-muted mt-5 empty-msg">
                        <i class="bi bi-plus-circle" style="font-size: 3rem;"></i>
                        <p>Maliyetleri buraya sürükleyin</p>
                    </div>
                </div>
                <div class="card-footer bg-white border-top">
                    <div class="d-flex justify-content-between">
                        <span>Kasa Net: <strong id="netBox">@((Model.PeriodTotalIncome - Model.PeriodTotalOutcome).ToString("N2"))</strong> ₺</span>
                        <span class="text-danger">Ek Maliyetler: -<strong id="additionalCost">0.00</strong> ₺</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <h5 class="fw-bold">Final Net Durum:</h5>
                        <h5 class="fw-bold text-primary" id="finalResult">@((Model.PeriodTotalIncome - Model.PeriodTotalOutcome).ToString("N2")) ₺</h5>
                    </div>

                    <div class="mt-3">
                        <button type="button" onclick="saveFinalReport()" class="btn btn-success w-100 shadow-sm fw-bold">
                            <i class="bi bi-file-earmark-check me-2"></i>Analizi Tamamla ve Raporu Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm border-0" style="max-height: 550px; overflow-y: auto;">
                <div class="card-header bg-secondary text-white fw-bold">Sabit Giderler & Demirbaşlar</div>
                <div id="sourceBox" class="card-body drop-zone" ondrop="drop(event)" ondragover="allowDrop(event)">
                    @foreach (var item in Model.AllFixedExpenses)
                    {
                        <div class="card mb-2 draggable shadow-sm border-start border-4 border-info"
                             draggable="true"
                             ondragstart="drag(event)"
                             id="cost-@item.Id"
                             data-price="@item.Amount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)"
                             style="cursor: grab;">
                            <div class="card-body p-2 d-flex justify-content-between">
                                <span>@item.Name</span>
                                <span class="fw-bold">@item.Amount.ToString("N2") ₺</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()


    <script type="text/javascript">
      
        var netKasaVal = document.getElementById("rawNetKasa")?.value || "0";
        var netKasa = parseFloat(netKasaVal.replace(',', '.')) || 0;

        function allowDrop(ev) {
            ev.preventDefault();
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
            ev.target.style.opacity = "0.5";
        }

        function drop(ev) {
            ev.preventDefault();
            var data = ev.dataTransfer.getData("text");
            var node = document.getElementById(data);
            if (!node) return;

            node.style.opacity = "1";
            var targetZone = ev.target.closest(".drop-zone");
            if (!targetZone) return;

            targetZone.appendChild(node);

            // Boş mesaj kontrolü
            var targetBox = document.getElementById("targetBox");
            var emptyMsg = document.querySelector(".empty-msg");
            if(emptyMsg) {
                emptyMsg.style.display = targetBox.querySelectorAll(".draggable").length > 0 ? "none" : "block";
            }

            updateCalculations();
        }

        function updateCalculations() {
            var additional = 0;
            document.querySelectorAll("#targetBox .draggable").forEach(function (el) {
                additional += parseFloat(el.getAttribute("data-price")) || 0;
            });

            var addCostEl = document.getElementById("additionalCost");
            if(addCostEl) {
                addCostEl.innerText = additional.toLocaleString("tr-TR", { minimumFractionDigits: 2 });
            }

            var final = netKasa - additional;
            var finalResultEl = document.getElementById("finalResult");
            if(finalResultEl) {
                finalResultEl.innerText = final.toLocaleString("tr-TR", { minimumFractionDigits: 2 }) + " ₺";
                finalResultEl.style.color = final < 0 ? "#dc3545" : "#0d6efd";
            }
        }

        async function saveFinalReport() {
            try {
                console.log("Rapor kaydetme işlemi başlatıldı...");

                let items = [];
                let addTotal = 0;

                // 1. Sürüklenen maliyetleri topla
                const draggedItems = document.querySelectorAll("#targetBox .draggable");
                draggedItems.forEach(el => {
                    let price = parseFloat(el.getAttribute("data-price")) || 0;
                    let name = el.querySelector("span")?.innerText.trim() || "Bilinmeyen Gider";
                    items.push({ Id: 0, Name: name, Amount: price });
                    addTotal += price;
                });

                // 2. Sayısal verileri C# Model'inden güvenli al
                let rev = parseFloat("@Model.PeriodTotalIncome.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)");
                let baseExp = parseFloat("@Model.PeriodTotalOutcome.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)");
                let finalExp = baseExp + addTotal;

                // 3. Veri Paketi (Payload)
                    let payload = {
                    ReportName: "",
                    StartDate: "@Model.StartDate.ToString("yyyy-MM-dd")",
                    EndDate: "@Model.EndDate.ToString("yyyy-MM-dd")",

                    // ViewModel'den gelen listeleri JSON olarak veriyoruz
                    // ViewModel'deki property isimlerin PeriodTotalIncome gibi değil,
                    // doğrudan liste olan property isimleri (örn: Incomes, Outcomes) olmalı
                    IncomeDetails: @Html.Raw(Json.Serialize(Model.IncomeDetails)),
                    OutcomeDetails: @Html.Raw(Json.Serialize(Model.OutcomeDetails)),

                    SelectedCosts: items, // Sürüklenen maliyetler
                    TotalRevenue: rev,
                    TotalExpenses: finalExp,
                    NetTotal: rev - finalExp
                };

                console.log("Gönderilecek Paket:", payload);

                if (!confirm("Raporu onaylayıp arşive göndermek istiyor musunuz?")) return;

                // 4. API İsteği
                const response = await fetch('/Admin/FinalReport/SaveReport', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    console.log("Kayıt başarılı.");
                    window.location.href = '/Admin/FinalReport/Index';
                } else {
                    const errorText = await response.text();
                    console.error("Sunucu Hatası:", errorText);
                    alert("Hata oluştu: " + errorText);
                }

            } catch (err) {
                console.error("İşlem Hatası:", err);
                alert("Bir JavaScript hatası oluştu. Konsolu kontrol edin.");
            }
        }
</script>