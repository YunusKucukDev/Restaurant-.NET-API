@using Restaurant.DtoLayer.CatalogDtos.IncomeDto

@model List<ResultIncomeDto>
@{
    int count = 0;
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info border-0 shadow-sm rounded-4">
        <i class="bi bi-info-circle me-2"></i> Bu tarihte ve vardiyada henüz bir gelir kaydı bulunmamaktadır.
    </div>
}
else
{
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold text-success text-center">
               Gelir Tablosu
            </h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">#</th>
                        <th>Gelir Adı</th>
                        <th>Açıklama / Kesinti</th>
                        <th class="text-end">Brüt Gelir</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var income in Model)
                    {
                        count++;
                        <tr>
                            <td class="ps-4 fw-bold text-muted">@count</td>
                            <td>
                                <span class="fw-bold text-dark">@income.IncomeName</span>
                            </td>
                            <td>
                                <small class="text-muted">@income.IncomeDescription</small>
                            </td>
                            <td class="text-end">
                                <span class="badge bg-success-subtle text-success fs-6 fw-bold">
                                    @income.IncomeAmount.ToString("C2")
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="/Admin/Computation/DeleteIncome/@income.IncomeId?selectedDate=@ViewBag.SelectedDate"
                                   class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                    <i class="bi bi-trash3-fill me-1"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}