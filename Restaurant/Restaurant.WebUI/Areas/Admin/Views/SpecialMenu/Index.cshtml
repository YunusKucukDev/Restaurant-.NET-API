@using Restaurant.DtoLayer.CatalogDtos.MenuDtos.SpecialMenuDtos
@model List<ResultSpecialMenuDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo sütun genişliklerini ve taşmaları kontrol et */
    .table td {
        vertical-align: middle;
    }

    .text-truncate-custom {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-responsive-group {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    @@media (max-width: 768px) {
        .text-truncate-custom {
            max-width: 80px;
        }

        .table {
            font-size: 12px;
        }

        .btn-responsive-group .btn {
            padding: 4px 8px;
        }
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center border-bottom">
                <h5 class="card-title m-b-0"> Spesiyal Menü İşlemleri</h5>
                <span class="badge rounded-pill bg-dark text-white">@Model.Count Menü</span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center mb-0">
                    <thead class="bg-light text-uppercase small font-weight-bold">
                        <tr>
                            <th scope="col" style="width: 50px;">#</th>
                            <th scope="col">Menü İsmi</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Görsel</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td class="font-weight-bold">@item.SpecialMenuName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <div class="text-truncate-custom mx-auto" title="@item.Description">
                                            <span class="badge bg-success-light text-success border border-success small" style="background-color: #e8f5e9;">
                                                <i class="fa fa-check"></i> Var
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-light text-danger border border-danger small" style="background-color: #ffebee;">
                                            <i class="fa fa-times"></i> Yok
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="text-success"><i class="fa fa-circle"></i> Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="fa fa-circle-o"></i> Pasif</span>
                                    }
                                </td>
                                <td class="text-primary font-weight-bold">@item.Price.ToString("C2")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <a href="@item.ImageUrl" target="_blank" class="text-info">
                                            <i class="fa fa-picture-o fa-lg"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <i class="fa fa-ban text-muted"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-responsive-group">
                                        <a class="btn btn-outline-primary btn-sm" href="~/Admin/SpecialMenu/UpdateSpecialMenu/@item.SpecialMenuId" title="Düzenle">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" href="~/Admin/SpecialMenu/DeleteSpecialMenu/@item.SpecialMenuId" title="Sil" onclick="return confirm('Bu spesiyal menüyü silmek istediğinize emin misiniz?')">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 mb-4">
            <a class="btn btn-success btn-lg w-100 shadow-sm border-0"
               href="~/Admin/SpecialMenu/CreateSpecialMenu"
               style="border-radius: 12px; background: linear-gradient(45deg, #28a745, #218838);">
                <i class="fa fa-plus-circle"></i>&nbsp; Yeni Spesiyal Menü Ekle
            </a>
        </div>
    </div>
</div>