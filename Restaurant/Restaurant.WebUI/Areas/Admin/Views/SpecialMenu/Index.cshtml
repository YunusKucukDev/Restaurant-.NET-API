@using Restaurant.DtoLayer.CatalogDtos.MenuDtos.SpecialMenuDtos
@model List<ResultSpecialMenuDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Spesiyal Menü İşlemleri</h5>
            </div>
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Spesiyal Menü İsmi</th>
                        <th scope="col">Açıklama </th>
                        <th scope="col">Aktif mi</th>
                        <th scope="col">İşlemler</th>
                        <th scope="col">Resim Url</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.SpecialMenuName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <span class="badge bg-success text-white">Var</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger text-white">Yok</span>
                                }
                            </td>
                            <td>@item.IsAvailable</td>
                            <td>@item.Price</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <span class="badge bg-success text-white ">Var</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger text-white">Yok</span>
                                }
                            </td>
                            <td>
                                <div class="button-group-area">
                                    <a class="btn btn-primary " href="~/Admin/SpecialMenu/UpdateSpecialMenu/@item.SpecialMenuId">Güncelle</a>
                                    <a class="btn btn-danger " href="~/Admin/SpecialMenu/DeleteSpecialMenu/@item.SpecialMenuId">Sil</a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a class="btn btn-success btn-lg btn-rounded d-flex justify-content-center" href="~/Admin/SpecialMenu/CreateSpecialMenu"><i class="fa fa-plus"> Spesiyal Menü Ekle</i></a>
        </div>
    </div>
</div>

