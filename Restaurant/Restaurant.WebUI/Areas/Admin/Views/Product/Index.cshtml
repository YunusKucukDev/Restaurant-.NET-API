@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0">Ürün İşlemleri</h5>
            </div>

            <div class="table-responsive">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün İsmi</th>
                            <th>Açıklama</th>
                            <th>Sıralama</th>
                            <th>Aktif mi</th>
                            <th>Fiyat</th>
                            <th>Resim</th>
                            <th>Kategori</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.DisplayOrder</td>

                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>

                                <td>@item.Price</td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <span class="badge bg-success">Var</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Yok</span>
                                    }
                                </td>

                                <td>@item.CategoryName</td>

                                <td>
                                    <div class="button-group-area">
                                        <a class="btn btn-primary btn-sm" href="~/Admin/Product/UpdateProduct/@item.ProductId">Güncelle</a>
                                        <a class="btn btn-danger btn-sm" href="~/Admin/Product/DeleteProduct/@item.ProductId">Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a class="btn btn-success btn-lg btn-rounded d-flex justify-content-center"
               href="~/Admin/Product/CreateProduct">
                <i class="fa fa-plus"></i>&nbsp;Ürün Ekle
            </a>
        </div>
    </div>
</div>
