@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo hücrelerini dikeyde ortala */
    .table td {
        vertical-align: middle;
    }

    /* Açıklama sütunu için özel kısıtlama */
    .description-cell {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Mobilde butonların yan yana düzgün durması */
    .btn-responsive-group {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    /* Modern rozetler ve renk paleti */
    .badge-soft-success {
        background-color: #e8f5e9;
        color: #2e7d32;
        border: 1px solid #c8e6c9;
    }

    .badge-soft-secondary {
        background-color: #f5f5f5;
        color: #616161;
        border: 1px solid #e0e0e0;
    }

    .badge-soft-info {
        background-color: #e3f2fd;
        color: #0277bd;
        border: 1px solid #bbdefb;
    }

    @@media (max-width: 768px) {
        .description-cell {
            max-width: 80px;
        }

        .table {
            font-size: 12px;
        }

            .table th, .table td {
                padding: 10px 5px;
            }
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center border-bottom bg-white">
                <h5 class="card-title m-b-0 text-dark font-weight-bold">
                    <i class="fa fa-shopping-basket text-primary mr-2"></i> Ürün İşlemleri
                </h5>
                <span class="badge rounded-pill badge-soft-info p-2 px-3">
                    <i class="fa fa-cubes"></i> @Model.Count Ürün
                </span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center align-middle mb-0">
                    <thead class="bg-light text-uppercase small font-weight-bold text-secondary">
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>Ürün İsmi</th>
                            <th>Açıklama</th>
                            <th>Favori</th>
                            <th>Sıralama</th>
                            <th>Durum</th>
                            <th>Fiyat</th>
                            <th>Resim</th>
                            <th>Kategori</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row" class="text-muted">@count</th>
                                <td class="font-weight-bold text-dark">@item.Name</td>
                                <td class="description-cell text-muted" title="@item.Description">
                                    @item.Description
                                </td>
                                <td>
                                    @if (item.IsFavorite)
                                    {
                                        <i class="fa fa-star text-warning fa-lg" title="Favori"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-star-o text-muted" title="Değil"></i>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-soft-secondary">@item.DisplayOrder</span>
                                </td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="text-success small font-weight-bold">
                                            <i class="fa fa-check-circle"></i> Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-danger small font-weight-bold">
                                            <i class="fa fa-times-circle"></i> Pasif
                                        </span>
                                    }
                                </td>
                                <td class="text-primary font-weight-bold text-nowrap">
                                    @item.Price.ToString("C2")
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <i class="fa fa-image text-success fa-lg" title="Görsel Mevcut"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-ban text-muted" title="Görsel Yok"></i>
                                    }
                                </td>
                                <td>
                                    <span class="small badge border text-dark bg-light">@item.CategoryName</span>
                                </td>
                                <td>
                                    <div class="btn-responsive-group">
                                        <a class="btn btn-outline-primary btn-sm" href="~/Admin/Product/UpdateProduct/@item.ProductId" title="Güncelle">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="btn btn-outline-danger btn-sm" href="~/Admin/Product/DeleteProduct/@item.ProductId" title="Sil" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 mb-4">
            <a class="btn btn-success btn-lg w-100 shadow-sm border-0"
               href="~/Admin/Product/CreateProduct"
               style="border-radius: 12px; background: linear-gradient(45deg, #28a745, #1e7e34);">
                <i class="fa fa-plus-circle"></i> Yeni Ürün Ekle
            </a>
        </div>
    </div>
</div>