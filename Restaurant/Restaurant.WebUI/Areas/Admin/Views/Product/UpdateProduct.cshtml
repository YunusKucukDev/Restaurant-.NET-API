@model UpdateProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
}

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 52px;
        height: 26px;
        margin-left: 10px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        background-color: #ccc;
        border-radius: 26px;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        transition: .3s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            border-radius: 50%;
            transition: .3s;
        }

    input:checked + .slider {
        background-color: #28a745;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    .status-text {
        font-weight: 600;
        margin-left: 10px;
    }
</style>

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <div class="card">
            <form method="post" asp-action="UpdateProduct">

                <!-- ProductId -->
                <input type="hidden" asp-for="ProductId" />

                <div class="card-body">
                    <h4 class="card-title mb-4">Ürün Güncelle</h4>

                    <!-- Ürün İsmi -->
                    <div class="form-group row">
                        <label class="col-sm-4 text-right col-form-label">Ürün İsmi</label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>

                    <!-- Fiyat -->
                    <div class="form-group row">
                        <label class="col-sm-4 text-right col-form-label">Ürün Fiyatı</label>
                        <div class="col-sm-8">
                            <input asp-for="Price" class="form-control" />
                        </div>
                    </div>

                    <!-- Resim -->
                    <div class="form-group row">
                        <label class="col-sm-4 text-right col-form-label">Resim Url</label>
                        <div class="col-sm-8">
                            <input asp-for="ImageUrl" class="form-control" />
                        </div>
                    </div>

                    <!-- KATEGORİ DROPDOWN -->
                    <div class="form-group row">
                        <label class="col-sm-4 text-right col-form-label">Kategori</label>
                        <div class="col-sm-8">
                            <select asp-for="CategoryId"
                                    asp-items="ViewBag.CategoryList"
                                    class="form-control">
                                <option value="">Kategori Seçiniz</option>
                            </select>
                        </div>
                    </div>

                    <!-- Açıklama -->
                    <div class="form-group row">
                        <label class="col-sm-4 text-right col-form-label">Açıklama</label>
                        <div class="col-sm-8">
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>
                    </div>

                    <!-- Sıralama -->
                    <div class="form-group row">
                        <label class="col-sm-4 text-right col-form-label">Sıralama</label>
                        <div class="col-sm-8">
                            <input asp-for="DisplayOrder" type="number" class="form-control" />
                        </div>
                    </div>

                    <!-- AKTİF / PASİF -->
                    <div class="form-group row align-items-center">
                        <label class="col-sm-4 text-right col-form-label">
                            Kategoride Gösterilsin mi?
                        </label>

                        <div class="col-sm-8 d-flex align-items-center">
                            <label class="switch mb-0">
                                <input type="checkbox" id="isActiveCheckbox" @(Model.IsAvailable ? "checked" : "") />
                                <span class="slider"></span>
                            </label>

                            <span id="statusText" class="status-text">
                                @(Model.IsAvailable ? "Aktif" : "Pasif")
                            </span>

                            <input type="hidden"
                                   asp-for="IsAvailable"
                                   id="isActiveHidden" />
                        </div>
                    </div>
                </div>

                <div class="border-top">
                    <div class="card-body text-right">
                        <button type="submit" class="btn btn-primary">
                            Güncelle
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <div class="col-md-3"></div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkbox = document.getElementById("isActiveCheckbox");
        const hidden = document.getElementById("isActiveHidden");
        const text = document.getElementById("statusText");

        checkbox.addEventListener("change", function () {
            hidden.value = this.checked ? "true" : "false";
            text.innerText = this.checked ? "Aktif" : "Pasif";
        });
    });
</script>
