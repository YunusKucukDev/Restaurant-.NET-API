@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo hücrelerini dikeyde ortala */
    .table td {
        vertical-align: middle;
    }

    /* Açıklama sütununu sınırlama */
    .description-truncate {
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Modern Rozet Renkleri (Spesiyal Menü Stili) */
    .badge-soft-success {
        background-color: #e8f5e9;
        color: #2e7d32;
        border: 1px solid #c8e6c9;
    }

    .badge-soft-secondary {
        background-color: #f5f5f5;
        color: #757575;
        border: 1px solid #e0e0e0;
    }

    .badge-soft-info {
        background-color: #e3f2fd;
        color: #0277bd;
        border: 1px solid #bbdefb;
    }

    @@media (max-width: 768px) {
        .description-truncate {
            max-width: 80px;
        }

        .table {
            font-size: 11px; /* Çok sütun olduğu için mobilde fontu biraz daha küçülttük */
        }

            .table th, .table td {
                padding: 8px 4px;
            }
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center border-bottom bg-white">
                <h5 class="card-title m-b-0 text-dark font-weight-bold">
                    <i class="fa fa-info-circle text-primary mr-2"></i> Şube İşlemleri
                </h5>
                <span class="badge rounded-pill badge-soft-info p-2 px-3">
                    <i class="fa fa-map-marker"></i> @Model.Count Şube Kaydı
                </span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center align-middle mb-0">
                    <thead class="bg-light text-uppercase small font-weight-bold text-secondary">
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>İşyeri Görsel</th>
                            <th colspan="6">Galeri Durumu (1-6)</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row" class="text-muted">@count</th>
                                <td class="font-weight-bold">@item.Title</td>
                                <td class="description-truncate mx-auto" title="@item.Description">
                                    @item.Description
                                </td>

                                <td>
                                    <div class="d-flex justify-content-center gap-1">
                                        <i class="fa fa-image @(string.IsNullOrEmpty(item.BranchImage1) ? "text-muted" : "text-success")" title="Resim 1"></i>
                                        <i class="fa fa-image @(string.IsNullOrEmpty(item.BranchImage2) ? "text-muted" : "text-success")" title="Resim 2"></i>
                                    </div>
                                </td>

                                <td colspan="6">
                                    <div class="d-flex justify-content-center">
                                        @for (int i = 1; i <= 6; i++)
                                        {
                                            var propName = "GalleryImage" + i;
                                            var val = item.GetType().GetProperty(propName)?.GetValue(item, null) as string;

                                            <i class="fa fa-circle mr-1"
                                               style="font-size: 10px; color: @(string.IsNullOrEmpty(val) ? "#dee2e6" : "#28a745")"
                                               title="Galeri @i"></i>
                                        }
                                    </div>
                                </td>

                                <td>
                                    <a class="btn btn-outline-primary btn-sm rounded-pill px-3"
                                       href="~/Admin/About/UpdateAbout/@item.AboutId">
                                        <i class="fa fa-edit"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>