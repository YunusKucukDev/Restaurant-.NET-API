@using Restaurant.DtoLayer.CatalogDtos.BookingDtos
@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Rezervasyon İşlemleri";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo hücrelerini dikeyde ortala */
    .table td {
        vertical-align: middle;
    }

    /* Mobilde butonların yan yana düzgün durması */
    .btn-responsive-group {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    /* Modern rozetler */
    .badge-soft-info {
        background-color: #e3f2fd;
        color: #0d47a1;
        border: 1px solid #bbdefb;
    }

    .badge-soft-dark {
        background-color: #f5f5f5;
        color: #424242;
        border: 1px solid #e0e0e0;
    }

    @@media (max-width: 768px) {
        .table {
            font-size: 12px;
        }

        .btn-responsive-group .btn {
            padding: 4px 8px;
        }
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-body d-flex justify-content-between align-items-center border-bottom bg-white">
                <h5 class="card-title m-b-0 text-dark font-weight-bold">
                    <i class="fa fa-calendar-check text-primary mr-2"></i>Rezervasyon Yönetimi
                </h5>
                <span class="badge rounded-pill badge-soft-dark p-2 px-3">
                    <i class="fa fa-database"></i> @Model.Count Toplam Rezervasyon
                </span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover text-center mb-0">
                    <thead class="bg-light text-uppercase small font-weight-bold">
                        <tr>
                            <th scope="col" style="width: 50px;">#</th>
                            <th scope="col">Müşteri</th>
                            <th scope="col">Tarih</th>
                            <th scope="col">Kişi</th>
                            <th scope="col">İletişim</th>
                            <th scope="col">E-Posta</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row" class="text-muted">@count</th>
                                <td class="font-weight-bold text-dark text-left">
                                    @item.Name @item.Surname
                                </td>
                                <td>
                                    <span class="text-dark">@item.Date.ToString("dd.MM.yyyy HH:mm")</span>
                                </td>
                                <td>
                                    <span class="badge badge-soft-info">
                                        <i class="fa fa-users"></i> @item.NumberOfPeople
                                    </span>
                                </td>
                                <td>
                                    <small class="font-weight-bold">@item.PhoneNumber</small>
                                </td>
                                <td>
                                    <small class="text-muted">@item.Email</small>
                                </td>
                                <td>
                                    <div class="btn-responsive-group">
                                        <a class="btn btn-outline-danger btn-sm" href="~/Admin/Booking/DeleteBooking/@item.BookingId" title="Sil">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>