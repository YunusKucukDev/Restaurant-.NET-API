
@using Microsoft.AspNetCore.Http
@using Restaurant.DtoLayer.CatalogDtos.FixedExpenseDto
@inject IHttpContextAccessor HttpContextAccessor
@model List<ResultFixedExpense>

@{
    ViewData["Title"] = "Genel Gider Listesi";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    var activeShift = HttpContextAccessor.HttpContext.Session.GetString("ActiveShift") ?? "Gunduz";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                <i class="bi bi-calculator text-primary me-2"></i>Genel Giderler
            </h2>
        </div>
        <a asp-action="CreateFixedExpense" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>Yeni Gider Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-success">
                        <tr>
                            <th class="ps-4">Gider Tanımı</th>
                            <th>Tutar</th>
                            <th>Kayıt Tarihi</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-3">
                                                <i class="bi bi-receipt text-secondary"></i>
                                            </div>
                                            <span class="fw-semibold">@item.Name</span>
                                        </div>
                                    </td>
                                    <td class="text-danger fw-bold">@item.Amount.ToString("C2")</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                   
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm rounded-pill bg-white p-1">
                                            <a href="~/Admin/FixedExpense/UpdateFixedExpense/@item.Id" class="btn btn-sm btn-warning text-dark px-3 border-end">
                                                <i class="bi bi-pencil-square fs-5"></i>
                                                Güncelle
                                            </a>
                                            <a asp-action="DeleteFixedExpense" asp-route-id="@item.Id"
                                               class="btn btn-sm btn-danger text-white px-3">
                                                <i class="bi bi-trash fs-5"></i>
                                                Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076402.png" style="width: 80px; opacity: 0.3;" class="mb-3 d-block mx-auto" />
                                    <p class="text-muted">Bu vardiya için henüz bir genel gider girişi yapılmamış.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Tablo satırına gelindiğinde gölge efekti */
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,0.02);
        transition: all 0.2s;
    }
    /* Buton grubu tasarımı */
    .btn-link {
        text-decoration: none;
    }

        .btn-link:hover {
            transform: scale(1.1);
        }
</style>