@using Microsoft.AspNetCore.Http
@using Restaurant.DtoLayer.CatalogDtos.FixedExpenseDto
@inject IHttpContextAccessor HttpContextAccessor
@model CreateFixedExpense

@{
    ViewData["Title"] = "Yeni Genel Gider";
    Layout = "~/Areas/Admin/Views/AdminUIControler/Index.cshtml";
    var activeShift = HttpContextAccessor.HttpContext.Session.GetString("ActiveShift") ?? "Gunduz";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-success text-dark">
                    <h5 class="mb-0 fw-bold text-center">
                         Yeni Gider
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="FixedExpense" asp-action="CreateFixedExpense" method="post">

                        <input type="hidden" name="ShiftType" value="@activeShift" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Gider Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Kira, Personel Maaşı, Elektrik" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tutar (₺)</label>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control fw-bold text-primary" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ödeme Tarihi</label>
                            <input asp-for="Date" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success">
                                Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-light py-2 fw-bold">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>